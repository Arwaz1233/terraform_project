// Provider configuration
terraform {
  aws = {
    source = "hashicorp/aws"
    version = "~> 3.0"
  }
 }
}

provider "aws" { 
  region = "us-east-1"
}

data "aws_vpc" "main" {
  id = "vpc_id"
}

resource 'aws_launch_template" "demolt" {
  name          = "demolt"
  image_id      = "xyz"
  instance_type = "t2_micro" 
  key_name = "kp"
network_interfaces {
  security_groups = "SG id"
}

block_devices_mappings {
  device_name = "/dev/xvda"
  ebs {
    volume_size = 8
    volume_type = "gp3"
  }
} 

iam_instance_profile {
  name = "ec2-ssm"
}

tag_specifications {
  resource_type = "instance"
  tags = {
    Name = "instance_name"
   }
 }
}

resource_autoscaling_group" "demoasg" {
  name                = "demoasg"
  min_size            = 2
  desired_capasity    = 2
  max_size            = 3
  vpc_zone_identifier = ["subnet1", "subnet"]
  launch_template {
    id    = aws_launch_template_demolt.id
    version = "$latest"
  }
}

resource "aws_lb" "alb" {
  name               = "alb"
  internal           = false
  load_balancer_type = "application"
  security_groups    = ["SG_id"]
  subnets            = ["subnet1", "subnet"]
}

resource_aws_lb_listener" "http_listener" {
  load_balancer_arn = aws_lb.alb.arn
  port              = 80
  protocol          = "HTTP"

  default_action {
    type            = "forward"
    target_group_arn = aws_lb_target_group.lt_ag.arn
  }
}

  

 
  
  
